FROM vm/ubuntu:18.04

# Install node 10
RUN curl -sL https://deb.nodesource.com/setup_14.x | bash
RUN apt install nodejs
RUN sudo apt-get install -y \
   libgtk2.0-0 \
   libgtk-3-0 \
   libnotify-dev \
   libgconf-2-4 \
   libnss3 \
   libxss1 \
   libasound2 \
   libxtst6 \
   xauth \
   xvfb \
   libgbm-dev
RUN git clone https://github.com/vippro99/nodejs-monney.git
RUN cd nodejs-monney && npm i -s
RUN node azure-li.js
